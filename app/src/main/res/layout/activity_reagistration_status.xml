<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
     android:background="@drawable/background" >
     <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/logo"
         android:contentDescription="@string/logo_description" />
     
        <TextView
        android:id="@+id/adm_noTextView"
        android:text="@string/admission_number_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
            android:textStyle="bold|italic"
        android:layout_marginLeft="40dp"/>
    
    <EditText
        android:id="@+id/adm_noEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
         android:layout_marginLeft="50dp"
        android:padding="11dp"
        android:hint="@string/admission_number"
        android:ems="10"
         >
 
        <requestFocus />
    </EditText>
 
    <Button
        android:id="@+id/statusButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
         android:layout_marginLeft="120dp"
        android:padding="11dp"
        android:text="@string/status_button_text" />
    
    <TextView
        android:id="@+id/responseTextView"
        android:text="@string/response_text_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
               
         />
 
</LinearLayout>