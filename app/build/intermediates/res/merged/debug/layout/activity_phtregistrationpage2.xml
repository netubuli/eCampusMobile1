<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:background="@drawable/background" >
     <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:contentDescription="@string/logo_description"
        android:src="@drawable/logo" />
       <TextView
        android:id="@+id/admYearTextView"
        android:text="@string/year_of_admission"
           android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
           android:textStyle="bold|italic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
         />  
              
       <Spinner
        android:id="@+id/admYearSpinner"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
		/>
                    
      <TextView
        android:id="@+id/schoolTextView"
        android:text="@string/school"
          android:textStyle="bold|italic"
        android:layout_marginLeft="70dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
         />        
            
      <Spinner
        android:id="@+id/facultySpinner"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
		/>

        <TextView
            android:id="@+id/courseCodeTextView"
            android:text="@string/course_code"
            android:textStyle="bold|italic"
            android:layout_marginLeft="70dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <Spinner
            android:id="@+id/courseCodeSpinner"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
              
        <TextView
        android:id="@+id/studyYearTextView"
        android:text="@string/year_of_study"
        android:layout_marginLeft="100dp"
            android:textStyle="bold|italic"
       android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
         />  
         
         <Spinner
        android:id="@+id/studyYearSpinner"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
		/> 
        
          <TextView
        android:id="@+id/campusTextView"
         android:layout_marginLeft="100dp"
              android:textStyle="bold|italic"
        android:text="@string/campus"
       android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
         /> 
         
        <Spinner
        android:id="@+id/campusSpinner"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
		/> 
		
        <TextView
        android:id="@+id/reasons1TextView"
         android:layout_marginLeft="10dp"
        android:text="@string/have_you_done_the_orientation_course_before"
            android:textStyle="bold|italic"
       android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
         /> 
         
        <Spinner
        android:id="@+id/reasons1Spinner"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
		/> 
		 <TextView
        android:id="@+id/reasons2TextView"
             android:textStyle="bold|italic"
        android:text="@string/why_are_you_registering_for_pht_112_again"
      android:layout_width="fill_parent"
          android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"  
            
         /> 
         <Spinner
        android:id="@+id/reasons2Spinner"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
		/> 
		 <TextView
        android:id="@+id/attemptsTextView"
         android:layout_marginLeft="10dp"
             android:textStyle="bold|italic"
        android:text="@string/your_applicable_option_regarding_pht112"
       android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
         /> 
        <Spinner
        android:id="@+id/attemptsSpinner"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
		/> 
		<TextView
        android:id="@+id/informationTextView"
        android:text="@string/error_nduplicate_registration_not_n_allowed"
        android:layout_marginLeft="100dp"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"       
         />  
 
     <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal">
    <Button
        android:id="@+id/backButton"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="50dp"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textStyle="bold" />
       
         <Button 
        android:id="@+id/submitButton"
        android:text="@string/submit"
        android:layout_marginLeft="15dp"           
        android:layout_marginRight="15dp"  
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
         </LinearLayout>     
   
</LinearLayout>
 </ScrollView>

