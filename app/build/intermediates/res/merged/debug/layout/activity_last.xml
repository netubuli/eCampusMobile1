    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/background" >
     
    
       <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/logo"
           android:contentDescription="@string/logo_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/thank_you_nyou_have_successfuly_registered_for_the_may_2014_offer_of_pht112_norientation_to_elearning_will_be_on_22of_april_to_2nd_may"
        tools:context=".lastActivity" 
      />
       <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <Button
        android:id="@+id/re_registrationButton"
        android:layout_marginRight="15dp"    
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/register_a_friend"
        android:textStyle="bold" />
         
         <Button
        android:id="@+id/homepageButton"
        android:layout_marginRight="15dp"    
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/back_to_homepage"
        android:textStyle="bold" />
              
         <Button 
        android:id="@+id/exitButton"
        android:text="@string/exit_application"
        android:layout_marginRight="15dp"    
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
    </LinearLayout>        
</LinearLayout>